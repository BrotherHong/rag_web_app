# 應用設定
APP_NAME=RAG Knowledge Base
DEBUG=True
API_V1_PREFIX=/api

# 安全設定
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# 資料庫
DATABASE_URL=postgresql+asyncpg://postgres:postgres123@postgres:5432/rag_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=rag_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# 預設管理員帳號（開發環境）
SUPER_ADMIN_USERNAME=superadmin
SUPER_ADMIN_PASSWORD=admin123
SUPER_ADMIN_EMAIL=superadmin@ncku.edu.tw
DEPT_ADMIN_PASSWORD=admin123

# 檔案上傳
MAX_FILE_SIZE=52428800 # 50 MB
ALLOWED_EXTENSIONS=.txt,.pdf,.doc,.docx,.xls,.xlsx
UPLOAD_DIR=/app/uploads

# CORS
CORS_ORIGINS=*

# Ollama 設定（請替換為您的 Ollama 服務 URL）
OLLAMA_BASE_URL=https://your-ollama-server-url
OLLAMA_SUMMARY_MODEL=qwen2.5:14b
OLLAMA_RAG_MODEL=qwen2.5:32b
OLLAMA_EMBEDDING_MODEL=bge-m3